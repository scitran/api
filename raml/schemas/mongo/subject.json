    "ethnicity":        { "enum": ["Not Hispanic or Latino", "Hispanic or Latino", "Unknown or Not Reported", null] },

    "code":             { "type": "string" },
    "tags":             { "type": "array", "items": {"type": "string"} },
    "metadata":         { "type": "object" }
  },
  "additionalProperties": false
}
