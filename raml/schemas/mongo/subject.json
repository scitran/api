{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "_id":              {},
    "firstname":        { "type": "string" },
    "lastname":         { "type": "string" },
    "firstname_hash":   { "type": "string" },
